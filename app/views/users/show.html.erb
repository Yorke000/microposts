<div class="row">
  <aside class="col-md-5">
    <section class="user_info">
    <div class="col-md-4">
         <%= gravatar_for @user %>
    </div>
    <div class="col-md-8">
        <div class="col-md-12">
            <h1>Name:<%= @user.name %></h1>
        </div>
        <div class="col-md-12">
            Profile:<%= @user.profile %>
        </div>
        <div class="col-md-12">
             Area:<%= @user.area %>   
        </div>
    </div>
    
    </section>
  </aside>
  
  <div class="col-md-4">

<%= render 'follow_form' if logged_in? %>
      
<% if @user.microposts.any? %>

      <h3>Microposts(
<%= @user.microposts.count %>
)</h3>
      <ol class="microposts">
          
<%= render @microposts %>

      </ol>
      
<% end %>

  </div>
</div>